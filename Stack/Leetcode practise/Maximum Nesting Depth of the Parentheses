class Solution {
public:
    int maxDepth(string s) {
        int n=s.size();
        int mx=0, current=0;
        for(int i=0;i<n;i++){
            
            if(s[i]=='('){
               current++;
            }
            else if(s[i]==')'){
               current--;
            }
            mx=max(current,mx);
        }
       return mx;
    }
};
